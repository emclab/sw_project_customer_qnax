<% if @view_in_config && @erb_code %>
    <%= render inline: @erb_code %>
<% else %>
  <%= simple_form_for @role_access_right do |f| %>
    <%= f.input :user_role_name, :label => t('User Role'), :input_html => {:value => @user_role.name}, :readonly => true %>
    <%= f.input :user_role_id, :as => :hidden, :input_html => {:value => @user_role.id} %>
    <%= f.input :action, :label => t('Action') %>
    <%= f.input :resource, :label => t('Resource') %>
    <%= f.input :brief_note, :label => t('Brief Note'), :input_html => {:rows => 1} %>
    
    <%= link_to t('Back'), SUBURI + "/authentify/view_handler?index=0", :class => BUTTONS_CLS['action'] %>
    <%= f.button :submit, t('Save') , :class => BUTTONS_CLS['action'] %>
  <% end %>

<% end %>

