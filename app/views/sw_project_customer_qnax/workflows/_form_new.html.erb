<% if @view_in_config && @erb_code %>
  <%= render inline: @erb_code %>
  
<% else %>
<h4><%=@title %></h4>

<%= simple_form_for @workflow do |f| %>    

  <%= f.input :project_info_id, :as => :hidden, :input_html => {:value => @project_info.id} %>
  <%= f.input :name, :label => t("Workflow Name") %> 
  <%= f.input :biz_form_id, :label => t('For Form'), :collection => @biz_forms, :include_blank => true %>
  <b><%=t('Workflow Steps')%></b>
  <p><%= link_to_add_fields t("Add Step"), f, :workflow_steps %></p>
  <%= f.input :brief_note, :label => t("Brief Note"), :input_html => {:rows => 2} %>
  
  <%= link_to t('Back'), SUBURI + "/authentify/view_handler?index=0", :class => BUTTONS_CLS['action'] %>
  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;        
  <%= f.button :submit, t('Save'), :class => BUTTONS_CLS['action'] %>  
<% end %>

<% end %>
